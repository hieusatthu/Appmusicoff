<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="t3h.com.appmusic.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                app:logo="@drawable/icon_music"
                android:theme="@style/customBackgroundPopup"
                android:popupTheme="@style/customBackgroundPopup"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </android.support.v7.widget.Toolbar>
        <android.support.design.widget.TabLayout
            app:tabSelectedTextColor="@color/mauTrang"
            app:tabIndicatorColor="@color/mauTrang"
            app:tabTextColor="@color/mauTrangDuc"
            android:id="@+id/my_tablayout"
            android:background="@color/mauDenNhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            >

        </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>
    </LinearLayout>
 <FrameLayout
     android:id="@+id/layout_content"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <android.support.v4.view.ViewPager
         android:id="@+id/my_viewpager"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     </android.support.v4.view.ViewPager>

 </FrameLayout>
</LinearLayout>
